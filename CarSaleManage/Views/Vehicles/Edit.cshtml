@model CarSaleManage.Models.Dtos.VehicleEditDto

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Vehicle</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Make" class="control-label"></label>
                <input asp-for="Make" class="form-control" />
                <span asp-validation-for="Make" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ModelNo" class="control-label"></label>
                <input asp-for="ModelNo" class="form-control" />
                <span asp-validation-for="ModelNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Classification" class="control-label"></label>
                <input asp-for="Classification" class="form-control" />
                <span asp-validation-for="Classification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Origin" class="control-label"></label>
                <input asp-for="Origin" class="form-control" />
                <span asp-validation-for="Origin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UsedCountry" class="control-label"></label>
                <input asp-for="UsedCountry" class="form-control" />
                <span asp-validation-for="UsedCountry" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegNo" class="control-label"></label>
                <input asp-for="RegNo" class="form-control" />
                <span asp-validation-for="RegNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegDate" class="control-label"></label>
                <input asp-for="RegDate" class="form-control" />
                <span asp-validation-for="RegDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EngineNo" class="control-label"></label>
                <input asp-for="EngineNo" class="form-control" />
                <span asp-validation-for="EngineNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelSystem" class="control-label"></label>
                <input asp-for="FuelSystem" class="form-control" />
                <span asp-validation-for="FuelSystem" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EngineCap" class="control-label"></label>
                <input asp-for="EngineCap" class="form-control" />
                <span asp-validation-for="EngineCap" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ChassisNo" class="control-label"></label>
                <input asp-for="ChassisNo" class="form-control" />
                <span asp-validation-for="ChassisNo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FuelType" class="control-label"></label>
                <input asp-for="FuelType" class="form-control" />
                <span asp-validation-for="FuelType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Color" class="control-label"></label>
                <input asp-for="Color" class="form-control" />
                <span asp-validation-for="Color" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MeterReading" class="control-label"></label>
                <input asp-for="MeterReading" class="form-control" />
                <span asp-validation-for="MeterReading" class="text-danger"></span>
            </div>

            <div>
                <label>Existing Images:</label><br />
                @if (Model.ExistingImages != null && Model.ExistingImages.Any())
                {
                    for (int i = 0; i < Model.ExistingImages.Count; i++)
                    {
                        <div class="image-box">
                            <img src="@Model.ExistingImages[i]" width="150" />
                            <input type="hidden" name="ExistingImages[@i]" value="@Model.ExistingImages[i]" />
                            <label>
                                <input type="checkbox" name="ImagesToRemove" value="@Model.ExistingImages[i]" />
                                Remove
                            </label>
                        </div>
                    }
                }
                else
                {
                    <span>No images uploaded.</span>
                }
            </div>

            <div>
                <label>Add New Images:</label>
                <input type="file" asp-for="Images" multiple accept="image/*" />
                <span asp-validation-for="Images" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
