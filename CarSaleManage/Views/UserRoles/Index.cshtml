@using CarSaleManage.Models.ViewModels
@model List<UserRolesViewModel>
@{
    ViewData["Title"] = "User Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="d-flex justify-content-end mb-4">
    <a asp-controller="Roles" asp-action="Index" class="btn btn-success px-4 py-2 shadow-sm">
        <i class="bi bi-info-circle"></i> View Roles
    </a>
</div>
<div class="row mb-4">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Index" method="get" class="input-group shadow-sm">
            <span class="input-group-text bg-white border-end-0">
                <i class="bi bi-search"></i>
            </span>
            <input type="text" name="searchString" class="form-control border-start-0" placeholder="Search users..." />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-arrow-right-circle"></i>
            </button>
        </form>
    </div>
</div>

<div class="row row-cols-1 row-cols-lg-2 g-4">
    @foreach (var user in Model)
    {
        <div class="col">
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body d-flex align-items-center justify-content-between flex-wrap">
                    <div class="d-flex flex-column flex-md-row align-items-md-center gap-3">
                        <div>
                            <h5 class="mb-1">@user.FirstName @user.LastName</h5>
                            <p class="mb-0 text-muted small">
                                <i class="bi bi-envelope me-1"></i> @user.Email<br />
                                <i class="bi bi-people me-1"></i> @string.Join(", ", user.Roles ?? new List<string>())
                            </p>
                        </div>
                    </div>
                    <div class="d-flex gap-2 mt-3 mt-md-0">
                        <a class="btn btn-sm btn-outline-primary" asp-controller="UserRoles" asp-action="Manage" asp-route-userId="@user.Id">
                            <i class="bi bi-people"></i> Manage Roles
                        </a>
                    </div>
                </div>

            </div>
        </div>
    }

</div>