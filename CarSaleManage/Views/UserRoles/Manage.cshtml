@using CarSaleManage.Models.ViewModels
@model List<ManageUserRolesViewModel>

@{
    ViewData["Title"] = "Manage User Roles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container-fluid mt-4">
    <h2 class="mb-3">
        <i class="bi bi-person-gear me-2"></i>Manage User Roles
    </h2>
    <hr />

    <div class="card shadow-sm border-0 mb-5">
        <form method="post">
            <div class="card-body">
                <h5 class="mb-0">
                    <i class="bi bi-person-lines-fill me-2"></i>Roles for User <strong>@ViewBag.UserName</strong>
                </h5>
                <div class="row gy-2 mt-4">
                    @for (int i = 0; i < Model.Count; i++)
                    {
                        <div class="col-6 col-md-12">
                            <div class="form-check">
                                <input type="hidden" asp-for="@Model[i].RoleId" />
                                <input type="hidden" asp-for="@Model[i].RoleName" />
                                <input asp-for="@Model[i].Selected" class="form-check-input" />
                                <label class="form-check-label" asp-for="@Model[i].Selected">
                                    @Model[i].RoleName
                                </label>
                            </div>
                        </div>
                    }
                </div>
                <div asp-validation-summary="All" class="text-danger mt-3"></div>
                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save2"></i> Update
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>
