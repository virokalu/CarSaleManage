@model CarSaleManage.Models.Vehicle

@{
    ViewData["Title"] = "Delete Vehicle";
}

<div class="container-fluid mt-4">
    <h2 class="mb-3 text-danger"><i class="bi bi-trash3-fill me-2"></i>Delete Vehicle</h2>
    <hr />

    <div class="alert alert-warning d-flex align-items-center" role="alert">
        <i class="bi bi-exclamation-triangle-fill me-2"></i>
        <div>
            Are you sure you want to delete this vehicle? This action cannot be undone.
        </div>
    </div>

    <div class="card shadow-sm border-0 mb-5">
        <div class="card-body">
            <!-- Delete Action -->
            <form asp-action="Delete" class="mt-4">
                <input type="hidden" asp-for="Id" />
                <div class="d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Cancel
                    </a>
                    <button type="submit" class="btn btn-danger px-4">
                        <i class="bi bi-trash3"></i> Confirm Delete
                    </button>
                </div>
            </form>
            <!-- Vehicle Images -->
            <div class="mb-4 mt-4">
                <h5><i class="bi bi-images me-2"></i>Images</h5>
                @if (Model.Images != null && Model.Images.Any())
                {
                    <div class="d-flex flex-wrap gap-3">
                        @foreach (var img in Model.Images)
                        {
                            <img src="@img" alt="Vehicle Image" class="img-thumbnail" style="max-width: 200px;" />
                        }
                    </div>
                }
                else
                {
                    <span class="text-muted">No images available.</span>
                }
            </div>

            <!-- Vehicle Info -->
            <dl class="row">
                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Make)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Make)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ModelNo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ModelNo)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Classification)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Classification)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Origin)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Origin)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.UsedCountry)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.UsedCountry)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Year)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Year)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RegNo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RegNo)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.RegDate)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.RegDate)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EngineNo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EngineNo)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FuelSystem)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FuelSystem)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.EngineCap)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.EngineCap)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.ChassisNo)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.ChassisNo)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.FuelType)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.FuelType)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Color)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Color)</dd>

                <dt class="col-sm-3">@Html.DisplayNameFor(model => model.MeterReading)</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.MeterReading)</dd>
            </dl>

            
        </div>
    </div>
</div>
