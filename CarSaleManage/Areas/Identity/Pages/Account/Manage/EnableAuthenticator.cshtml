@page
@model EnableAuthenticatorModel
@{
    ViewData["Title"] = "Configure authenticator app";
    ViewData["ActivePage"] = ManageNavPages.TwoFactorAuthentication;
}

<div class="container-fluid mt-4">
    <h3 class="text-primary mb-3">
        <i class="bi bi-phone-fill me-2"></i>@ViewData["Title"]
    </h3>

    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <p>To use an authenticator app, follow these steps:</p>
            <ol class="list-group list-group-numbered mb-4">
                <li class="list-group-item">
                    Download a two-factor authenticator app like Microsoft Authenticator for
                    <a href="https://go.microsoft.com/fwlink/?Linkid=825072">Android</a> and
                    <a href="https://go.microsoft.com/fwlink/?Linkid=825073">iOS</a>, or Google Authenticator for
                    <a href="https://play.google.com/store/apps/details?id=com.google.android.apps.authenticator2&amp;hl=en">Android</a> and
                    <a href="https://itunes.apple.com/us/app/google-authenticator/id388497605?mt=8">iOS</a>.
                </li>
                <li class="list-group-item">
                    Scan the QR code or enter this key into your app:
                    <kbd class="bg-light p-2 rounded">@Model.SharedKey</kbd>
                    <div class="alert alert-info mt-2">
                        Learn how to <a href="https://go.microsoft.com/fwlink/?Linkid=852423">enable QR code generation</a>.
                    </div>
                    <div id="qrCode" class="mb-2"></div>
                    <div id="qrCodeData" data-url="@Model.AuthenticatorUri"></div>
                </li>
                <li class="list-group-item">
                    After scanning or entering the key, your app will generate a code. Enter it below to confirm setup:
                    <form id="send-code" method="post" class="mt-3">
                        <div class="form-floating mb-3">
                            <input asp-for="Input.Code" class="form-control" autocomplete="off" placeholder="Enter verification code" />
                            <label asp-for="Input.Code">Verification Code</label>
                            <span asp-validation-for="Input.Code" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="bi bi-check2-circle me-1"></i>Verify
                        </button>
                        <div asp-validation-summary="ModelOnly" class="text-danger mt-2" role="alert"></div>
                    </form>
                </li>
            </ol>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
