@model IEnumerable<Vehicle>

@{
    ViewData["Title"] = "Vehicles";
}

<div class="d-flex justify-content-end mb-4">
    <a asp-action="Create" class="btn btn-success px-4 py-2 shadow-sm">
        <i class="bi bi-plus-circle me-1"></i> Add New Vehicle
    </a>
</div>

<div class="row mb-4">
    <div class="col-md-6 offset-md-3">
        <form asp-action="Index" method="get" class="input-group shadow-sm">
            <span class="input-group-text bg-white border-end-0">
                <i class="bi bi-search"></i>
            </span>
            <input type="text" name="searchString" class="form-control border-start-0" placeholder="Search vehicles..." />
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-arrow-right-circle"></i>
            </button>
        </form>
    </div>
</div>


<div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
    @foreach (var item in Model)
    {
        <div class="col">
            <div class="card h-100 shadow-sm border-0">
                <a asp-action="Details" asp-route-id="@item.Id" class="text-decoration-none text-dark">
                    @if (item.Images != null && item.Images.Any())
                    {
                        <img src="@item.Images.First()" class="card-img-top rounded-top" alt="Vehicle Image" style="height:200px; object-fit:cover;" />
                    }
                    else
                    {
                        <img src="~/images/default-vehicle.jpg" class="card-img-top rounded-top" alt="Default Vehicle" style="height:200px; object-fit:cover;" />
                    }

                    <div class="card-body d-flex align-items-center justify-content-between flex-wrap">
                        <div class="col">
                            <div class="row">
                                <h5 class="card-title">@item.Make @item.ModelNo</h5>
                            </div>
                            <div class="row">
                                <p class="card-text text-muted small">
                                    <i class="bi bi-tags me-1"></i>  @item.RegNo<br />
                                    <i class="bi bi-geo-alt me-1"></i> @item.Origin<br />
                                    <i class="bi bi-globe me-1"></i> @item.ChassisNo<br />
                                    <i class="bi bi-calendar me-1"></i> @item.FuelType
                                </p>
                            </div>
                        </div>
                    </div>
                </a>
                <div class="card-footer d-flex justify-content-center gap-2 justify-content-between flex-wrap">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                        <i class="bi bi-pencil-square"></i> Edit
                    </a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                        <i class="bi bi-trash"></i> Delete
                    </a>
                </div>
            </div>
        </div>

    }
    @if (Model.Count() == 0)
    {
        <p>No Vehicles to display...</p>
    }
</div>

