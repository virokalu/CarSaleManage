@page
@model LoginModel
@{
    ViewData["Title"] = "Log in";
}

<div class="container-fluid mt-4">
    <h2 class="mb-3 text-primary">
        <i class="bi bi-box-arrow-in-right me-2"></i>@ViewData["Title"]
    </h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm border-0">
                <div class="card-body">
                    <form id="account" method="post">
                        <h5 class="mb-3">Use your account to log in</h5>
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Email" class="form-control" autocomplete="username" placeholder="name@example.com" />
                            <label asp-for="Input.Email">Email</label>
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                        <div class="form-floating mb-3">
                            <input asp-for="Input.Password" class="form-control" autocomplete="current-password" placeholder="Password" />
                            <label asp-for="Input.Password">Password</label>
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-check mb-3">
                            <input class="form-check-input" asp-for="Input.RememberMe" />
                            <label class="form-check-label" asp-for="Input.RememberMe">
                                @Html.DisplayNameFor(m => m.Input.RememberMe)
                            </label>
                        </div>

                        <button id="login-submit" type="submit" class="w-100 btn btn-primary">
                            <i class="bi bi-box-arrow-in-right me-1"></i>Log in
                        </button>

                        <hr class="my-4" />

                        <div class="text-center">
                            @* <p><a class="btn btn-outline-primary w-100" id="forgot-password" asp-page="./ForgotPassword"><i class="bi fas bi-key me-1"></i>Forgot your password</a></p> *@
                            <p><a class="btn btn-outline-primary w-100" asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl"><i class="bi fas bi-person-plus-fill me-1"></i>Register as a new user</a></p>
                            @* <p><a class="btn btn-outline-primary w-100" id="resend-confirmation" asp-page="./ResendEmailConfirmation"><i class="bi fas bi-envelope-check me-1"></i>Resend email confirmation</a></p> *@
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
