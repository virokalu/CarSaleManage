@model CarSaleManage.Models.Dtos.VehicleDto

@{
    ViewData["Title"] = "Create Vehicle";
}

<div class="container-fluid mt-4">
    <h2 class="mb-3"><i class="bi bi-car-front me-2"></i>Create New Vehicle</h2>
    <hr />

    <div class="card shadow-sm border-0 mb-5">
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="row g-3">
                    <div class="col-md-6">
                        <label asp-for="Make" class="form-label"></label>
                        <input asp-for="Make" class="form-control" />
                        <span asp-validation-for="Make" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ModelNo" class="form-label"></label>
                        <input asp-for="ModelNo" class="form-control" />
                        <span asp-validation-for="ModelNo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Classification" class="form-label"></label>
                        <input asp-for="Classification" class="form-control" />
                        <span asp-validation-for="Classification" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="Origin" class="form-label"></label>
                        <input asp-for="Origin" class="form-control" />
                        <span asp-validation-for="Origin" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="UsedCountry" class="form-label"></label>
                        <input asp-for="UsedCountry" class="form-control" />
                        <span asp-validation-for="UsedCountry" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Year" class="form-label"></label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="text-danger"></span>
                    </div>
                    <div class="col-md-3">
                        <label asp-for="Color" class="form-label"></label>
                        <input asp-for="Color" class="form-control" />
                        <span asp-validation-for="Color" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="RegNo" class="form-label"></label>
                        <input asp-for="RegNo" class="form-control" />
                        <span asp-validation-for="RegNo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="RegDate" class="form-label"></label>
                        <input asp-for="RegDate" class="form-control" />
                        <span asp-validation-for="RegDate" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="EngineNo" class="form-label"></label>
                        <input asp-for="EngineNo" class="form-control" />
                        <span asp-validation-for="EngineNo" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="FuelSystem" class="form-label"></label>
                        <input asp-for="FuelSystem" class="form-control" />
                        <span asp-validation-for="FuelSystem" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="EngineCap" class="form-label"></label>
                        <input asp-for="EngineCap" class="form-control" />
                        <span asp-validation-for="EngineCap" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="ChassisNo" class="form-label"></label>
                        <input asp-for="ChassisNo" class="form-control" />
                        <span asp-validation-for="ChassisNo" class="text-danger"></span>
                    </div>

                    <div class="col-md-6">
                        <label asp-for="FuelType" class="form-label"></label>
                        <input asp-for="FuelType" class="form-control" />
                        <span asp-validation-for="FuelType" class="text-danger"></span>
                    </div>
                    <div class="col-md-6">
                        <label asp-for="MeterReading" class="form-label"></label>
                        <input asp-for="MeterReading" class="form-control" />
                        <span asp-validation-for="MeterReading" class="text-danger"></span>
                    </div>

                    <div class="col-md-12">
                        <label asp-for="Images" class="form-label">Upload Images</label>
                        <input type="file" asp-for="Images" multiple accept="image/*" class="form-control" />
                        <span asp-validation-for="Images" class="text-danger"></span>
                    </div>
                </div>

                <div class="mt-4 d-flex justify-content-between">
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="bi bi-arrow-left-circle"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="bi bi-save me-1"></i> Create Vehicle
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

