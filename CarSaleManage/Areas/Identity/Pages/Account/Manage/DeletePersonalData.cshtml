@page
@model DeletePersonalDataModel
@{
    ViewData["Title"] = "Delete Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container-fluid mt-4">
    <h3 class="text-danger mb-3">
        <i class="bi bi-trash-fill me-2"></i>@ViewData["Title"]
    </h3>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <div class="alert alert-warning" role="alert">
                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                <strong>This action will permanently remove your account and cannot be undone.</strong>
            </div>

            <form id="delete-user" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                @if (Model.RequirePassword)
                {
                    <div class="form-floating mb-3">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="Enter your password" />
                        <label asp-for="Input.Password"></label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                }

                <button class="btn btn-danger w-100" type="submit">
                    <i class="bi bi-person-x-fill me-1"></i>Delete Data and Close My Account
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
