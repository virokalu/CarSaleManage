@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<div class="container-fluid mt-4">
    <h2 class="text-primary mb-3">
        <i class="bi bi-file-earmark-person-fill me-2"></i>@ViewData["Title"]
    </h2>

    <div class="card shadow-sm border-0">
        <div class="card-body">
            <p>Your account contains personal data that you have given us. This page allows you to download or delete that data.</p>
            <div class="alert alert-warning">
                <strong>Warning:</strong> Deleting this data will permanently remove your account and cannot be recovered.
            </div>

            <form id="download-data" asp-page="DownloadPersonalData" method="post" class="mb-3">
                <button class="btn btn-outline-primary w-100" type="submit">
                    <i class="bi bi-cloud-download me-1"></i>Download Personal Data
                </button>
            </form>

            <a id="delete" asp-page="DeletePersonalData" class="btn btn-outline-danger w-100">
                <i class="bi bi-trash-fill me-1"></i>Delete Account
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
